@model IEnumerable<SIMS_SE06205.Models.TeacherViewModel>

@{
    ViewData["title"] = "Teacher Management";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    bool statusAdd = Convert.ToBoolean(TempData["saveStatus"]);
    bool statusDel = Convert.ToBoolean(TempData["DeleteStatus"]);
    bool statusUpdate = Convert.ToBoolean(TempData["UpdateStatus"]);
}
<div class="row">
    <div class="col col-sm-12 col-md-12 p-3">
        <h3>List of Teachers</h3>
        <a class="btn btn-primary btn-sm my-2" href="@Url.Action("Add","Teacher")">Add Teacher</a>

        @if (TempData["saveStatus"] != null)
        {
            @if (statusAdd)
            {
                <div class="text-success my-2">Added Successfully</div>
            }
            else
            {
                <div class="text-danger my-2">Add Failed</div>
            }
        }
        @if (TempData["DeleteStatus"] != null)
        {
            @if (statusDel)
            {
                <div class="text-success my-2">Deleted Successfully</div>
            }
            else
            {
                <div class="text-danger my-2">Delete Failed</div>
            }
        }
        @if (TempData["UpdateStatus"] != null)
        {
            @if (statusUpdate)
            {
                <div class="text-success my-2">Updated Successfully</div>
            }
            else
            {
                <div class="text-danger my-2">Update Failed</div>
            }
        }

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Teacher Code</th>
                    <th>Teacher Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th colspan="2" width="5%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.TeacherCode</td>
                        <td>@item.TeacherName</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="@Url.Action("Update","Teacher", new { id = @item.Id })">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","Teacher", new { id = @item.Id })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>