@model SIMS_SE06205.Models.StudentViewModel
@{
    ViewData["title"] = "Student Add";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row">
    <div class="col col-sm-12 col-md-12 p-3">
        <div class="card">
            <div class="card-header">
                <h5> Add New Student</h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Add" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label asp-for="StudentCode" class="control-label"></label>
                                <input asp-for="StudentCode" class="form-control" />
                                <span asp-validation-for="StudentCode" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="StudentName" class="control-label"></label>
                                <input asp-for="StudentName" class="form-control"></input>
                                <span asp-validation-for="StudentName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Birthday" class="control-label" ></label>
                                <input asp-for="Birthday" class="form-control" type="date"></input>
                                <span asp-validation-for="Birthday" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control"></input>
                                
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Gender" class="control-label"></label>

                                <select asp-for="Gender" class="form-control">
                                    <option asp-for="Null"></option>
                                    <option asp-for="Male">Male</option>
                                    <option asp-for="Female">Female</option>
                                    <option asp-for="Other">Other</option>
                                </select>

                                
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control" type="tel"  pattern="\d{10}"  maxlength="10" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <button class="btn btn-primary btn-sm" type="submit">Save</button>
                                <a class="btn btn-info btn-sm" href="@Url.Action("Index","Student")">Back to List</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
